{
    "layout":
    {
        "fig_width": 6,
        "top_margin": 0,
        "left_margin": 0,
        "right_margin": 0,
        "panel_height": 3.5,
        "grid_wspace": -0.5
    },
    "x_display":{
        "label": "Volume (liters)",
        "global_x_ticks": [0,0.3]
    },
    "formatting":
    {
        "x_label_fontsize": 14,
        "y_label_fontsize": 14,
        "tick_fontsize": 12,
        "legend_fontsize": 10,
        "y_label_pad": 50,
        "legend_bbox_to_anchor": [0.7, 1],
        "palette": "muted",
        "patch_alpha": 0.5,
        "max_rows_per_legend":5 ,
        "data_linewidth": 2
    },
    "processing":
    {
        "envelope_n": 2000
    },
    "annotations":
    [
        {
            "panel": 0,
            "type": "text",
            "label": "Aortic stenosis",
            "x_coord": 0.15,
            "y_rel_coord": 1.2
        },
        {
            "panel": 1,
            "type": "text",
